### Visitors!
### Please borrow freely from this config, but make sure to change
### the [user] section to your info

[core]
	excludesfile = /home/dliu/GIT_EXCLUDE

### colors are meant for a dark terminal
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[color "branch"]
	current = white blue bold
	local  = blue
	remote = green
[color "diff"]
	plain = white
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
	whitespace = red blink
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	br = branch
	bg = bisect good
	bb = bisect bad
	co = checkout
	amend = commit --amend
	incr = commit --amend -C HEAD
	plus = commit --amend -a -C HEAD
      	castle = !git push -f ssh://sandcastle.facebook.com/data/git/tfb HEAD:refs/users/`whoami`
	gr = grep -i
	ci = commit
	di = diff
	rb = rebase
        rbi = rebase -i
        rbit = !git rebase -i `git merge-base HEAD trunk`
        dm = !git log -p -w --reverse HEAD...`git merge-base HEAD master`
	st = status
	su = status -uno
	cp = cherry-pick
	sh = !git-sh
	# "garbage-collect branches" whose tips have been merged into trunk
	gcbr = !git branch --no-color --no-track --merged trunk | sed 's/[ *]*//' | grep -v master | grep -v '(no branch)' | xargs -n1 git branch -D || exit 0

[svn]
	followparent = true
        rmdir = true

[commit]
	template = /home/eletuchy/admin/scripts/templates/git-commit-template.txt
[user]
	name = dliu
	email = david.c.liu@facebook.com
[log]
	date = relative
[blame]
	date = short
[diff]
	renames = true
	mnemonicprefix = true
	#external = /home/eletuchy/bin/git/colordiff-wrapper.sh
	tool = vimdiff
	#external = git_diff_wrapper
[pager]
	#diff =
[apply]
	whitespace = strip
[merge]
	tool = emerge
[status]
	relativePaths = false
[web]
	browser = lynx
[rebase]
	stat = true
## for perf reasons (sad), don't add the index-dirtiness state to bash PS1
[bash]
	showDirtyState = false
